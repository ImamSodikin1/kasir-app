<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:padding="10dp"
        android:background="@color/bg_button"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/ic_profile"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/blacksemu"
                android:fontFamily="@font/poppinsbold"
                android:textSize="18dp"
                android:text="Cowsoran"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppinsbold"
                android:textSize="15sp"
                android:textColor="@color/blacksemu"
                android:text="Admin"/>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/blacksemu"/>
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginStart="10dp"
       android:layout_marginEnd="20dp"
       android:layout_marginTop="20dp"
       android:padding="10dp"
       android:orientation="vertical">

       <LinearLayout
           android:layout_marginTop="10dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/ivDasbor"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_dasbor"/>
           <TextView
               android:id="@+id/tvDasbor"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textColor="@color/blacksemu"
               android:fontFamily="@font/poppinsmedium"
               android:textSize="15sp"
               android:layout_marginTop="3dp"
               android:layout_marginStart="5dp"
               android:textStyle="bold"
               android:text="Dasbor"/>
       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/img_produk"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_produk"/>

           <TextView
               android:id="@+id/txt_produk"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="3dp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Produk"
               android:textColor="@color/blacksemu"
               android:textSize="15sp"
               android:textStyle="bold" />
       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/ivPesanan"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_pesanan"/>

           <TextView
               android:id="@+id/tvPesanan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="3dp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Pesanan"
               android:textColor="@color/blacksemu"
               android:textSize="15sp"
               android:textStyle="bold" />
       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/ivTransaksi"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_transaksi"/>

           <TextView
               android:id="@+id/tvTransaki"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="3dp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Transaksi"
               android:textColor="@color/blacksemu"
               android:textSize="15sp"
               android:textStyle="bold" />
       </LinearLayout>

       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/ivProduk"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_produk"/>

           <TextView
               android:id="@+id/tvProduk"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="3dp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Produk"
               android:textColor="@color/blacksemu"
               android:textSize="15sp"
               android:textStyle="bold" />
       </LinearLayout>
       <LinearLayout
           android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="horizontal">

           <ImageView
               android:id="@+id/ivPengaturan"
               android:layout_width="30dp"
               android:layout_height="30dp"
               android:src="@drawable/ic_setting"/>

           <TextView
               android:id="@+id/tvPengaturan"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginStart="5dp"
               android:layout_marginTop="3dp"
               android:fontFamily="@font/poppinsmedium"
               android:text="Pengaturan"
               android:textColor="@color/blacksemu"
               android:textSize="15sp"
               android:textStyle="bold" />
       </LinearLayout>

   </LinearLayout>




</LinearLayout>